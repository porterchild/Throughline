{
  "manifest_version": 3,
  "name": "Throughline",
  "version": "1.0",
  "description": "Trace research lineages through time using LLMs",
  "permissions": ["storage"],
  "host_permissions": [
    "https://app.researchrabbit.ai/*",
    "https://openrouter.ai/*",
    "https://api.semanticscholar.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "config.html",
  "content_scripts": [
    {
      "matches": ["https://app.researchrabbit.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}